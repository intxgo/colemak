// PolishColemakCode 
// 2020-01-01 https://github.com/internalc/colemak
// Layout tweaked for programmers, numbers swapped with symbols, etc.
// Fix acer laptop keyboard: swap vol- vol+ with End Home

partial alphanumeric_keys
xkb_symbols "polish_colemak_code_acer" {

    include "us"
    name[Group1]= "PolishColemak Code (Acer)";

    key <TLDE> { [        grave,   asciitilde,      dead_tilde,       asciitilde ] };
    key <AE01> { [       exclam,            1,      exclamdown,      onesuperior ] };
