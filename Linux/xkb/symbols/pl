    key <LSGT> { [      Shift_L,      Shift_L,         Shift_L,          Shift_L ] };
    key <SPCE> { [        space,        space,           space,     nobreakspace ] };

    key <HOME> { [XF86AudioRaiseVolume,XF86AudioRaiseVolume,XF86AudioRaiseVolume,XF86AudioRaiseVolume] };
    key <END>  { [XF86AudioLowerVolume,XF86AudioLowerVolume,XF86AudioLowerVolume,XF86AudioLowerVolume] };
    key <VOL-> { [          End,          End,             End,              End ] };
    key <VOL+> { [         Home,         Home,            Home,             Home ] };
    
    include "level3(ralt_switch)"
};
